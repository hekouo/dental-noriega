{
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "src",
    "next.config.mjs",
    "*.d.ts",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2022",
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
